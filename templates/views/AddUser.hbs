<div class="row">
  <div class="col-12">
    <div class="card mb-4">
      <div class="card-header"><strong>Εγγραφή Νέου Χρήστη </strong></div>

      <div class="card-body">

        {{!-- <p class="text-medium-emphasis small">Ενδεχομένος οδηγίες προς τον χρήστη που συμπληρώνει την φόρμα.</p>
        --}}

        <div class="example">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-coreui-toggle="tab" role="tab" id="UserForm">
                Φόρμα Εγγραφής</a>
            </li>


          </ul>
          <!-- Form -->
          <div class="tab-content rounded-bottom">
            <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-789" id="UserFormEmail">


              <form class="row g-3" action="/user/AddUser" method="POST">


                {{!-- Επίθετο --}}
                <div class="col-md-4">
                  <label class="form-label" for="lname">Επίθετο</label>
                  <input class="form-control" id="lname" name="lname" type="text" required="">
                </div>

                {{!-- Όνομα --}}
                <div class="col-md-4">
                  <label class="form-label" for="fname">Όνομα</label>
                  <input class="form-control" id="fname" name="fname" type="text" required="">
                </div>


                {{!-- AMKA --}}
                <div class="col-md-5">
                  <label class="form-label" for="email">AMKA</label>
                  <input class="form-control" id="UserAmka" name="UserAmka" type="number" size="4" required="">
                </div>

                <div class="col-md-4">
                  <label class="form-label" for="validationAge">Ηλικία</label>
                  <input class="form-control" id="age" name="age" type="text" required="">
                </div>


                <div class="col-md-6">
                  <label class="form-label" for="validationDefaultEmail">Email</label>
                  <div class="input-group"><span class="input-group-text" id="inputGroupPrepend2">@</span>
                    <input class="form-control" id="email" name="email" type="email" placeholder="email@email.gr"
                      required="">
                  </div>
                </div>


                <!-- Password input -->
                <div class="col-md-7">
                  <label class="form-label" for="password">Κωδικός</label>
                  <input class="form-control" id="password" name="password" type="password" required="">
                </div>

                <!-- Password input 2-->
                <div class="col-md-7">
                  <label class="form-label" for="RepeatPassword">Επαναληψη Κωδικού</label>
                  <input class="form-control" id="RepeatPassword" name="RepeatPassword" type="password" required="">
                </div>


                <div class="col-md-4">
                  <label class="form-label" for="validationMobile">Κινητό</label>
                  <input class="form-control" id="mobile_number" name="mobile_number" type="text"
                    required="">
                </div>

                <div class="col-md-4">
                  <label class="form-label" for="streetName">Διεύθηνση</label>
                  <input class="form-control" id="streetName" name="streetName" type="text"
                  >
                </div>

                <div class="col-md-2">
                  <label class="form-label" for="streetNumber">Αριθμός</label>
                  <input class="form-control" id="streetNumber" name="streetNumber" type="number" required=""
                    >
                </div>

                <div class="col-md-3">
                  <label class="form-label" for="streetZip">Τ.Κ.</label>
                  <input class="form-control" id="streetZip" name="streetZip" type="number" >
                </div>



                <div class="col-12">
                  <button class="btn btn-primary" type="submit">Υποβολή Φόρμας</button>
                </div>
              </form>
            </div>
          </div>
          <!-- Form -->





        </div>
      </div>
    </div>
  </div>



  {{#if error}}

  <script>
    const myTimeout = setTimeout(myGreeting, 3000);

    function myGreeting() {
      $("#toast").hide()
    }
  </script>

  <div class="justify-content-end mt-5" id="toast" style="display: flex;">

    <div class="toast fade show bg-{{status}}" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <svg class="docs-placeholder-img rounded me-2" width="20" height="10" xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">

        </svg><strong class="me-auto"></strong><small></small>
        <button class="btn-close" id="btn-close" type="button" data-coreui-dismiss="toast" aria-label="Close"></button>
      </div>

      {{!-- MESSAGE --}}
      <div class="toast-body">{{message}}.</div>
    </div>
  </div>
  {{/if}}

</div>